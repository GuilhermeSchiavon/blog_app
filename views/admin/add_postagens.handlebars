{{#each erros}}
   <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova Postagem</h3>
<div class="card">
   <div class="card-body">
      <form action="/admin/postagens/gravar" method="POST">
         <label for="nome">Titulo</label>
            <input type="text" name="titulo" placeholder="Nome da postagem" class="form-control" required>
         <label for="nome">Slug</label>
            <input type="text" name="slug" placeholder="Slug da postagem" class="form-control" required>
         <label for="nome">Conteúdo</label>
            <textarea type="text" name="conteudo" class="form-control" required></textarea>
         <label for="nome">Descricao</label>
            <input type="text" name="descricao" placeholder="Conteúdo da postagem" class="form-control" required>
         <label for="nome">Categoria</label>
            <select class="form-select" name="categoria">
               {{#each categorias}}
                  <option class="form-select" value="{{_id}}">{{nome}}</option>
               {{else}}
                  <option class="form-select" value="0">Nehuma Categoria registrada</option>
               {{/each}}
            </select>
            <br>
         <button type="submit" class="btn btn-primary">Criar Postagem</button>
      </form>
   </div>
</div>
